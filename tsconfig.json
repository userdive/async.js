{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es5",
      "dom",
      "es2015.collection",
      "es2015.core",
      "es2015.promise"
    ],
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {},
    "outDir": "./lib"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
